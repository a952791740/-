    "def bingbao(n):\n",
    "    arr.append(n)\n",
    "    while n != 1:\n",
    "        if n % 2 == 0:\n",
    "            n = n // 2\n",
    "        else:\n",
    "                n = 3 * n + 1\n",
    "        arr.append(n)\n",
    "    return\n",
    "\n",
    "if __name__=='__main__':\n",
    "    arr = []\n",
    "    n = int(input('请输入一个正整数:'))\n",
    "    bingbao(n)\n",
    "    print(arr)\n",
    "    "
